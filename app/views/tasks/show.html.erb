<p id="notice"><%= notice %></p>

<p>
  <strong>Sprint:</strong>
  <% Sprint.where(:id => @task.sprint_id).each do |sprint| %>
        <%= sprint.name%>
    <% end %>
</p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Importance:</strong>
  <%= @task.importance %>
</p>

<p>
  <strong>Initial estimate:</strong>
  <%= @task.initial_estimate %>
</p>

<p>
  <strong>User:</strong>
  <% User.where(:id => @task.user_id).each do |user| %>
        <%= user.login%>
    <% end %>
</p>

<p>
  <strong>Status:</strong>
  <% if @task.status == 2 %>
  In track
  <% else %>
  Done
  <% end %>
</p>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', sprints_path %>
