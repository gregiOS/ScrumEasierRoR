<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <!-- Pole niewidoczne przechowujace id sprintu, ktore przyszlo jako parametr w url pod kluczem "format" -->
    <%= f.hidden_field :sprint_id, :value => params[:format]%>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :importance %><br>
    <%= f.number_field :importance %>
  </div>
  <div class="field">
    <%= f.label :initial_estimate %><br>
    <%= f.number_field :initial_estimate %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.collection_select :user_id, User.all, :id, :login, multiple: true, :prompt => "Please Select" %>
  </div>
  <div class="field">
    <%= f.hidden_field :status, :value => 2%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
